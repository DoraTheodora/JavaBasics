/* Write a program which asks the user for 2 numbers, and it indicates
 * if the first number is exactly divisible by the second number.*/
 
import java.util.Scanner;  // Import the Scanner class for input
public class Divisible {
    public static void main (String[] args)
    {
        Scanner number = new Scanner(System.in);
        System.out.print("Enter first number: ");
        int number1 = number.nextInt();
        System.out.print("Enter second number: ");
        int number2 = number.nextInt();
        
        if(number1%number2 ==0) // cheking if the fist number dividied by the second, has any reminder
            System.out.println("First number is divisible by the second number!");
        else
            System.out.println("First number is NOT divisible by the second number!");
    }

}
